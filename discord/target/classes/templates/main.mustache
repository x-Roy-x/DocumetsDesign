<html>
<body>
<div>
    <form method="post" action="createUser">
        <h3>Add</h3>
        <input type="text" name="username" placeholder="Write username"/>
        <input type="text" name="email" placeholder="Write email"/>
        <input type="text" name="phone" placeholder="Write phone"/>
        <input type="text" name="age" placeholder="Write age"/>
        <input type="text" name="photo" placeholder="Write photo"/>
        <button type="submit"> ADD </button>
    </form>
    <div>
    <form method="post" action="updateUser">
        <h3>Update</h3>
        <input type="text" name="id" placeholder="Write id"/>
        <input type="text" name="username" placeholder="Write username"/>
        <input type="text" name="email" placeholder="Write email"/>
        <input type="text" name="phone" placeholder="Write phone"/>
        <input type="text" name="age" placeholder="Write age"/>
        <input type="text" name="photo" placeholder="Write photo"/>
        <button type="submit"> Update </button>
    </form>

        {{#updateUsers}}
            <div>
                <b>{{username}}</b>
                <b>{{email}}</b>
                <b>{{phone}}</b>
                <b>{{age}}</b>
                <b>{{photo}}</b>
            </div>
        {{/updateUsers}}
    </div>

    <form method="post" action="getUser">
        <h3>Search</h3>
        <input type="text" name="username" placeholder="Write username">
        <button type="submit">Search</button>
    </form>

    <form method="post" action="deleteUser">
        <h3>Delete</h3>
        <input type="text" name="username" placeholder="Write username">
        <button type="submit">Delete</button>
    </form>

</div>
    {{#users}}
        <div>
            <b>{{username}}</b>
            <b>{{email}}</b>
            <b>{{phone}}</b>
            <b>{{age}}</b>
            <b>{{photo}}</b>
        </div>
    {{/users}}
</body>
</html>
